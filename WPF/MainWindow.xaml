<Window x:Class="SuperTUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SuperTUI"
        Width="1400"
        Height="900"
        WindowStartupLocation="CenterScreen">
    <Grid x:Name="RootContainer">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- Main pane area - focus scope removed to allow Tab navigation to reach modal and status bar -->
        <Grid x:Name="PaneCanvas" Grid.Row="0" Margin="0"
              KeyboardNavigation.TabNavigation="Cycle"
              KeyboardNavigation.DirectionalNavigation="Cycle"/>

        <!-- Status bar at bottom -->
        <Border x:Name="StatusBarContainer" Grid.Row="1" BorderThickness="0,1,0,0"/>

        <!-- Modal overlay container (spans all rows, appears on top) -->
        <Grid x:Name="ModalOverlay" Grid.RowSpan="2" Visibility="Collapsed" Panel.ZIndex="1000"/>

        <!-- Notification overlay container (top-right, appears above modal) -->
        <Grid x:Name="NotificationOverlay" Grid.RowSpan="2" Panel.ZIndex="2000" IsHitTestVisible="False"/>
    </Grid>
</Window>
